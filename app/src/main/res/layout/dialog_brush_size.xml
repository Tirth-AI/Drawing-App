<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/ibBrushSizeSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/small_brush"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ibBrushSizeMedium"
        />

    <ImageButton
        android:id="@+id/ibBrushSizeMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medium_brush"
        app:layout_constraintTop_toBottomOf="@+id/ibBrushSizeSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ibBrushSizeLarge"
        />

    <ImageButton
        android:id="@+id/ibBrushSizeLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/large_brush"
        app:layout_constraintTop_toBottomOf="@+id/ibBrushSizeMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>